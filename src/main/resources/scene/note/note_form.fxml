<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rwilk.exploreenglish.controller.note.NoteFormController">

  <HBox>
    <Label minWidth="100" text="Id:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldId" editable="false" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox>
    <Label minWidth="100" text="Lesson:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
      </HBox.margin>
    </Label>
    <ComboBox fx:id="comboBoxLesson" minWidth="200" prefWidth="150.0">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
      </HBox.margin>
    </ComboBox>
    <Button onAction="#buttonAddWordsOnAction" text="Add">
      <HBox.margin>
        <Insets bottom="5.0" left="2.5" right="5.0" top="5.0" />
      </HBox.margin>
    </Button>
    <Button onAction="#buttonBoldOnAction" text="Bold">
      <HBox.margin>
        <Insets bottom="5.0" left="2.5" right="5.0" top="5.0" />
      </HBox.margin>
    </Button>
    <Button onAction="#buttonItalicsOnAction" text="Italics">
      <HBox.margin>
        <Insets bottom="5.0" left="2.5" right="5.0" top="5.0" />
      </HBox.margin>
    </Button>
    <Button onAction="#buttonWordTagOnAction" text="Word">
      <HBox.margin>
        <Insets bottom="5.0" left="2.5" right="5.0" top="5.0" />
      </HBox.margin>
    </Button>
    <Button onAction="#buttonCopyHtmlOnAction" text="Copy HTML">
      <HBox.margin>
        <Insets bottom="5.0" left="2.5" right="5.0" top="5.0" />
      </HBox.margin>
    </Button>
  </HBox>

  <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
    <VBox alignment="TOP_CENTER" maxWidth="Infinity" prefWidth="50" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
          minWidth="0" maxHeight="Infinity">
      <TextArea fx:id="textAreaNote" prefWidth="50" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
      </TextArea>
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="2.5" top="5.0"/>
      </HBox.margin>
    </VBox>
    <VBox maxWidth="Infinity" prefWidth="50" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" minWidth="0">
      <HTMLEditor fx:id="htmlEditor" prefWidth="50" HBox.hgrow="ALWAYS">
      </HTMLEditor>
      <HBox.margin>
        <Insets bottom="5.0" left="2.5" right="5.0" top="5.0"/>
      </HBox.margin>
    </VBox>
  </HBox>

  <HBox prefWidth="100" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
    <Label minWidth="100" text="Title:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldTitle" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="2.5" top="5.0" />
      </HBox.margin>
    </TextField>
    <Button onAction="#buttonAddTitleOnAction" text="Add">
      <HBox.margin>
        <Insets bottom="5.0" left="2.5" right="5.0" top="5.0" />
      </HBox.margin>
    </Button>
  </HBox>

  <HBox>
    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#buttonDeleteOnAction" text="Delete">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </HBox.margin>
    </Button>
    <Region HBox.hgrow="ALWAYS" />
    <HBox alignment="BOTTOM_RIGHT">
      <Button mnemonicParsing="false" onAction="#buttonClearOnAction" text="Clear">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </HBox.margin>
      </Button>

      <Button layoutX="210.0" layoutY="10.0" mnemonicParsing="false" onAction="#buttonEditOnAction" text="Edit">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </HBox.margin>
      </Button>
      <Button layoutX="331.0" layoutY="10.0" mnemonicParsing="false" onAction="#buttonAddOnAction" text="Add">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </HBox.margin>
      </Button>
    </HBox>
  </HBox>

</VBox>
