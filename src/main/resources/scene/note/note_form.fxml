<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="rwilk.exploreenglish.controller.note.NoteFormController"
      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

  <HBox>
    <Label minWidth="100" text="Id:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldId" HBox.hgrow="ALWAYS" editable="false">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox>
    <Label minWidth="100" text="Lesson:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <ComboBox fx:id="comboBoxLesson" prefWidth="150.0" minWidth="200">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </ComboBox>
  </HBox>

  <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" prefWidth="100">
    <TextArea fx:id="textAreaNote" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </HBox.margin>
    </TextArea>
  </HBox>

  <HBox>
    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Delete" onAction="#buttonDeleteOnAction">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Region HBox.hgrow="ALWAYS"/>
    <HBox alignment="BOTTOM_RIGHT">
      <Button mnemonicParsing="false" text="Clear" onAction="#buttonClearOnAction">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Button>

      <Button layoutX="210.0" layoutY="10.0" mnemonicParsing="false" text="Edit" onAction="#buttonEditOnAction">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Button>
      <Button layoutX="331.0" layoutY="10.0" mnemonicParsing="false" text="Add" onAction="#buttonAddOnAction">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Button>
    </HBox>
  </HBox>

</VBox>
