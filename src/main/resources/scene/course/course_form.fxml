<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="rwilk.exploreenglish.controller.course.CourseFormController"
      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

  <HBox>
    <Label minWidth="100" text="Id">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldId" HBox.hgrow="ALWAYS" editable="false">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox>
    <Label minWidth="100" text="Name">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldName" HBox.hgrow="ALWAYS">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox>
    <Label minWidth="100" text="Description">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextArea fx:id="textAreaDescription" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" prefRowCount="3" wrapText="true">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextArea>
<!--    <TextField fx:id="textFieldDescription" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">-->
<!--      <HBox.margin>-->
<!--        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>-->
<!--      </HBox.margin>-->
<!--    </TextField>-->
  </HBox>

  <HBox>
    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Export Database" onAction="#buttonExportDatabaseOnAction" disable="true">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Generate Document" onAction="#buttonGenerateDocumentOnAction" disable="true">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Delete" onAction="#buttonDeleteOnAction" disable="true">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Region HBox.hgrow="ALWAYS"/>
    <HBox alignment="BOTTOM_RIGHT">
      <Button mnemonicParsing="false" text="Clear" onAction="#buttonClearOnAction">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Button>

      <Button layoutX="210.0" layoutY="10.0" mnemonicParsing="false" text="Edit" onAction="#buttonEditOnAction" disable="true">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Button>
      <Button layoutX="331.0" layoutY="10.0" mnemonicParsing="false" text="Add" onAction="#buttonAddOnAction" disable="true">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Button>
    </HBox>
  </HBox>

</VBox>
