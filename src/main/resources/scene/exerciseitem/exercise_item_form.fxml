<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="rwilk.exploreenglish.controller.exerciseitem.ExerciseItemFormController"
      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

  <HBox>
    <Label minWidth="100" text="Id:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <TextField fx:id="textFieldId" HBox.hgrow="ALWAYS" editable="false">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </HBox.margin>
    </TextField>
  </HBox>

  <HBox>
    <Label minWidth="100" text="Exercise:">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="10.0"/>
      </HBox.margin>
    </Label>
    <ComboBox fx:id="comboBoxExercise" prefWidth="150.0" minWidth="200">
      <HBox.margin>
        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </ComboBox>
  </HBox>

  <HBox HBox.hgrow="ALWAYS">
    <VBox HBox.hgrow="ALWAYS">
      <Label text="Question"/>
      <TextField fx:id="textFieldQuestion" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
      </HBox.margin>
    </VBox>

    <VBox HBox.hgrow="ALWAYS">
      <Label text="Correct Answer"/>
      <TextField fx:id="textFieldCorrectAnswer" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
      </HBox.margin>
    </VBox>
  </HBox>

  <HBox HBox.hgrow="ALWAYS">
    <VBox HBox.hgrow="ALWAYS">
      <Label text="Final Answer"/>
      <TextField fx:id="textFieldFinalAnswer" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
      </HBox.margin>
    </VBox>
  </HBox>

  <HBox HBox.hgrow="ALWAYS">
    <VBox HBox.hgrow="ALWAYS">
      <Label text="First Possible Answer"/>
      <TextField fx:id="textFieldFirstPossibleAnswer" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
      </HBox.margin>
    </VBox>

    <VBox HBox.hgrow="ALWAYS">
      <Label text="Second Possible Answer"/>
      <TextField fx:id="textFieldSecondPossibleAnswer" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
      </HBox.margin>
    </VBox>
  </HBox>

  <HBox HBox.hgrow="ALWAYS">
    <VBox HBox.hgrow="ALWAYS">
      <Label text="Third Possible Answer"/>
      <TextField fx:id="textFieldThirdPossibleAnswer" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
      </HBox.margin>
    </VBox>

    <VBox HBox.hgrow="ALWAYS">
      <Label text="Fourth Possible Answer"/>
      <TextField fx:id="textFieldFourthPossibleAnswer" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
      </HBox.margin>
    </VBox>
  </HBox>

  <HBox HBox.hgrow="ALWAYS">
    <VBox HBox.hgrow="ALWAYS">
      <Label text="Dialogue English"/>
      <TextField fx:id="textFieldDialogueEnglish" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
      </HBox.margin>
    </VBox>

    <VBox HBox.hgrow="ALWAYS">
      <Label text="Dialogue Polish"/>
      <TextField fx:id="textFieldDialoguePolish" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
      </HBox.margin>
    </VBox>
  </HBox>

  <HBox HBox.hgrow="ALWAYS">
    <VBox HBox.hgrow="ALWAYS">
      <Label text="Description"/>
      <TextField fx:id="textFieldDescription" HBox.hgrow="ALWAYS">
        <VBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
        </VBox.margin>
      </TextField>
      <HBox.margin>
        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5"/>
      </HBox.margin>
    </VBox>
  </HBox>

  <HBox>
    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Delete" onAction="#buttonDeleteOnAction">
      <HBox.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </HBox.margin>
    </Button>
    <Region HBox.hgrow="ALWAYS"/>
    <HBox alignment="BOTTOM_RIGHT">
      <Button mnemonicParsing="false" text="Clear" onAction="#buttonClearOnAction">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Button>

      <Button layoutX="210.0" layoutY="10.0" mnemonicParsing="false" text="Edit" onAction="#buttonEditOnAction">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Button>
      <Button layoutX="331.0" layoutY="10.0" mnemonicParsing="false" text="Add" onAction="#buttonAddOnAction">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
      </Button>
    </HBox>
  </HBox>

</VBox>
